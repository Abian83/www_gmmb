- model_class = Debt
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @debt.user_id
%p
  %strong= model_class.human_attribute_name(:contact_id) + ':'
  %br
  = @debt.contact_id
%p
  %strong= model_class.human_attribute_name(:quantity) + ':'
  %br
  = @debt.quantity
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @debt.description
%p
  %strong= model_class.human_attribute_name(:type_cd) + ':'
  %br
  = @debt.type_cd
%p
  %strong= model_class.human_attribute_name(:status_cd) + ':'
  %br
  = @debt.status_cd
%p
  %strong= model_class.human_attribute_name(:created_by_cd) + ':'
  %br
  = @debt.created_by_cd


= link_to t('.back', :default => t("helpers.links.back")), debts_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_debt_path(@debt), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), debt_path(@debt), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
