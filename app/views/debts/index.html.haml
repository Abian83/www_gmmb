%p#notice= notice
%h1 Listing Debts
%table
  %thead
    %tr
      %th Id
      %th User
      %th Contact
      %th Type
      %th Status
      %th Created by
      %th Quantity
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @debts.each do |debt|
      %tr
        %td= debt.id
        %td= "#{debt.user.name}:#{debt.user.id}" if debt.user
        %td= "#{debt.contact.name}:#{debt.contact.id}" if debt.contact
        %td= debt.type
        %td= debt.status
        %td= debt.created_by
        %td= debt.description
        %td= link_to 'Show', debt
        %td= link_to 'Edit', edit_debt_path(debt)
        %td= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Debt', new_debt_path
