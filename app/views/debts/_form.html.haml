= form_for(@debt) do |f|
  - if @debt.errors.any?
    #error_explanation
      %h2
        = pluralize(@debt.errors.count, "error")
        prohibited this debt from being saved:
      %ul
        - @debt.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :contact_id
    %br/
    = f.text_field :contact_id
  .field
    = f.label :type
    %br/
    = f.text_field :type
  .field
    = f.label :quantity
    %br/
    = f.text_field :quantity
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit
