<p id="notice"><%= notice %></p>

<h1>Listing Debts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>From</th>
      <th>To</th>
      <th>Quantity</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.id %></td>
        <td><%= debt.from_user.name if debt.from_user %></td>
        <td><%= debt.to_user.name if debt.to_user %></td>
        <td><%= debt.quantity %></td>
        <td><%= debt.description %></td>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

