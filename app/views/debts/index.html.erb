<p id="notice"><%= notice %></p>

<h1>Listing Debts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Contact</th>
      <th>Type</th>
      <th>Status</th>
      <th>Created by</th>
      <th>Quantity</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.id %></td>
        <td><%= "#{debt.user.name}:#{debt.user.id}" if debt.user %></td>
        <td><%= "#{debt.contact.name}:#{debt.contact.id}" if debt.contact %></td>
        <td><%= debt.type %></td>
        <td><%= debt.status %></td>
        <td><%= debt.created_by %></td>
        <td><%= debt.description %></td>
        <td><%= link_to 'Show', debt %></td>
        <td><%= link_to 'Edit', edit_debt_path(debt) %></td>
        <td><%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

