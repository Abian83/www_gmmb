%p#notice= notice
%h1 Listing Users
%table
  %thead
    %tr
      %th Id
      %th Token
      %th Name
      %th Email
      %th Password
      %th Phone
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.api_token
        %td= user.name
        %td= user.email
        %td= user.password
        %td= user.phone
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
